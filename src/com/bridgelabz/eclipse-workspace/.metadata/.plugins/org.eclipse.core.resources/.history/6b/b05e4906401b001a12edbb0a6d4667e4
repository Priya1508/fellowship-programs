package com.bridgelabz.data_structures.data_structs;

import java.util.Scanner;

import com.bridgelabz.ds.utility.Utility;

public class BankingCashCounter {

	public static void main(String[] args) {
		Utility u=new Utility();
		int x=1;
		while(x>0)
		{
			Scanner sc=new Scanner(System.in);
			System.out.println("Enter 1 if you want to deposit cash: ");
			System.out.println("Enter 2 if you want to withdraw cash: ");
			System.out.println("Enter 3 for getting number of persons: ");
			int input=sc.nextInt();
			
			switch(input)
			{
			  case 1:
				System.out.println("Enter the amount you want to deposit:");
				int amount=sc.nextInt();
				System.out.println(amount+" deopsited successfully");
				System.out.println("--------THANK YOU VISIT AGAIN------");
				u.dequeue();
				x--;
				break;
				
			  case 2:
				  System.out.println("Enter the amount you want withdraw:");
				  int amount1=sc.nextInt();
				  System.out.println(amount1+" successfully withdrawn");
				  System.out.println("--------THANK YOU VISIT AGAIN------");
				  u.dequeue();
				  x--;
				  break;
//			  case 3:
//				  System.out.println("Enter the person: ");
//				  int person=sc.nextInt();
//				  x=person*x;
				  
			}
		}

	}

}
