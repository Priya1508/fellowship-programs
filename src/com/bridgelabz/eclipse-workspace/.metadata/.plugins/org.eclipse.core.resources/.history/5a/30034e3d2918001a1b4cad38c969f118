package com.bridgelabz.fellowshipprogram.algorithm;

public class Merge_sort 
{
	public static void main(String[] args) 
	{
		String str[]= {"B","C","E","A","D"};
		Merge_sort ms=new Merge_sort();
		ms.sort(str,0,str.length-1);
		System.out.println("Sorted array is: ");
		for(int i=0;i<str.length;i++)
		{
			System.out.print(str[i]+" ");
		}
	}
	public void sort(String[] str,int low,int high)
	{
		int mid;
		if(low<high)
		{
			mid=(low+high)/2;
			sort(str,low,mid);
			sort(str,mid+1,high);
			merge(str,low,mid,high);
		}
	}
	void merge(String str[],int low,int mid,int high)
	{
		int l=mid-low+1;
		int r=high-mid;
		String LeftArray[]=new String[l];
		String RightArray[]=new String[r];
		
		for(int i=0;i<l;i++)
			LeftArray[i]=str[low+i];
		for(int j=0;j<r;j++)
			RightArray[j]=str[mid+1+j];
		int i=0,j=0;
		int k=low;
		while(i<l && j<r)
		{
			if(LeftArray[i].compareTo(RightArray[j])<0)
			{
				str[k]=LeftArray[i];
				i++;
			}
			else
			{
				str[k]=RightArray[j];
				j++;
			}
			k++;
		}
		while(i<l)
		{
			str[k]=LeftArray[i];
			i++;
			k++;
		}
		while(j<r)
		{
			str[k]=RightArray[j];
			j++;
			k++;
		}
	}

}
